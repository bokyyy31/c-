#include <stdio.h>

int main()
{
    int n;
    scanf("%d", &n);

    int stock_in[100];
    int sold[100];
    int stock[100];
    int i;

    for (i = 0; i < n; i++)
    {
        scanf("%d", &stock_in[i]);
    }

    for (i = 0; i < n; i++)
    {
        scanf("%d", &sold[i]);
    }

    for (i = 0; i < n; i++)
    {
        stock[i] = stock_in[i] - sold[i];
    }

    printf("재고 수량 : ");
    for (i = 0; i < n; i++)
    {
        printf("%d", stock[i]);
        if (i < n - 1)
        {
            printf(" ");
        }
    }
    printf("\n");

    int total_sold = 0;
    int total_in = 0;
    for (i = 0; i < n; i++)
    {
        total_sold = total_sold + sold[i];
        total_in = total_in + stock_in[i];
    }

    double sell_rate = (double)total_sold / total_in * 100;
    printf("총 판매수량 : %d (판매율 %.2f%%)\n", total_sold, sell_rate);

    int max_sold = sold[0];
    int max_id = 1;
    for (i = 1; i < n; i++)
    {
        if (sold[i] > max_sold)
        {
            max_sold = sold[i];
            max_id = i + 1;
        }
    }
    printf("가장 많이 판매 된 상품 : ID %d , 판매량 %d\n", max_id, max_sold);

    int min_sold = sold[0];
    int min_id = 1;
    for (i = 1; i < n; i++)
    {
        if (sold[i] < min_sold)
        {
            min_sold = sold[i];
            min_id = i + 1;
        }
    }
    printf("가장 적게 판매된 상품 : ID %d, 판매량 %d\n", min_id, min_sold);

    for (i = 0; i < n; i++)
    {
        if (stock[i] <= 2)
        {
            printf("상품ID%d : 재고부족(%d)\n", i + 1, stock[i]);
        }
    }
    return 0;
}
